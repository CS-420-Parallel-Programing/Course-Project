{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build test.cpp",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "-I/opt/homebrew/Cellar/open-mpi/4.1.5/include",
                "-L/opt/homebrew/Cellar/open-mpi/4.1.5/lib",
                "-lmpi",
                "${workspaceFolder}/test.cpp",
                "${workspaceFolder}/graph.cpp",
                "${workspaceFolder}/dijkstra.cpp",
                "${workspaceFolder}/mpi_traversal.cpp",
                "-o",
                "${workspaceFolder}/test"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build and run main",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "-I/opt/homebrew/Cellar/open-mpi/4.1.5/include",
                "-L/opt/homebrew/Cellar/open-mpi/4.1.5/lib",
                "-lmpi",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/graph.cpp",
                "${workspaceFolder}/tools.cpp",
                "${workspaceFolder}/dijkstra.cpp",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
